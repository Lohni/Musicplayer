<resources>

    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryLight</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="colorOnPrimary">@color/colorTextLight</item>
        <!-- <item name="android:colorBackground">@color/colorBackground</item> -->
        <item name="colorControlNormal">@color/colorTextLight</item>
        <item name="android:navigationBarColor">@color/colorPrimaryNight</item>
        <item name="android:statusBarColor">@color/colorPrimaryNight</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="actionBarSize">50dp</item>
    </style>
    <style name="ShapeAppearance.MusicPlayer.SmallComponents"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>
