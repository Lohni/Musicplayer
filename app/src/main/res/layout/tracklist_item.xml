<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal"
    android:backgroundTint="@color/NewcolorSurfaceVariant"
    android:background="@drawable/background_button_secondary"
    android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/tracklist_cover"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/background_button_secondary"
            android:backgroundTint="@color/NewcolorSecondary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tracklist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:singleLine="true"
                android:textColor="@color/NewcolorText"
                android:textSize="16sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tracklist_artist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textColor="@color/NewcolorText"
                android:alpha="0.8"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/tracklist_more"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/NewcolorText"
            android:background="@drawable/anim_more_vert_to_up" />

</LinearLayout>