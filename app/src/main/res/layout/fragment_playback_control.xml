<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/playbackcontrol_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured="true"
    tools:context=".ui.playbackcontrol.PlaybackControl"
    android:transitionName="@string/transition_playback_layout">

    <LinearLayout
        android:id="@+id/playback_control_drag_holder"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:orientation="vertical"
        android:backgroundTint="@color/colorTransparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/new_seekbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <View
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/background_button_secondary"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center"/>
    </LinearLayout>

    <com.lohni.musicplayer.ui.views.PlaybackControlSeekbar
        android:id="@+id/new_seekbar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintBottom_toTopOf="@id/playback_control_holder"
        app:layout_constraintTop_toBottomOf="@id/playback_control_drag_holder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playback_control_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorBackground"
        app:layout_constraintTop_toBottomOf="@id/new_seekbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.lohni.musicplayer.ui.views.AudioVisualizerView
            android:id="@+id/playbackcontrol_visualizer"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:focusable="false"
            app:visualizerColor="@color/colorSurfaceLevel1"
            android:filterTouchesWhenObscured="true"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/control_play"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/play_to_pause_anim"
            android:backgroundTint="@color/colorOnBackground"
            app:layout_constraintBottom_toBottomOf="@id/playbackcontrol_visualizer"
            app:layout_constraintLeft_toRightOf="@id/control_title"
            app:layout_constraintRight_toLeftOf="@id/control_skip"
            app:layout_constraintTop_toTopOf="@id/playbackcontrol_visualizer" />

        <ImageButton
            android:id="@+id/control_skip"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/anim_skip_forward"
            android:backgroundTint="@color/colorOnBackground"
            app:layout_constraintBottom_toBottomOf="@id/playbackcontrol_visualizer"
            app:layout_constraintLeft_toRightOf="@id/control_play"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/playbackcontrol_visualizer" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/control_title"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/colorOnBackground"
            android:focusable="false"
            android:textSize="18sp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            app:layout_constraintLeft_toRightOf="@id/control_queue"
            app:layout_constraintRight_toLeftOf="@id/control_play"
            app:layout_constraintTop_toTopOf="@id/control_play"
            app:layout_constraintBottom_toTopOf="@id/control_artist"
            android:transitionName="@string/transition_playback_title"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/control_artist"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorOnBackground"
            android:alpha="0.8"
            android:textSize="16sp"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="@id/playbackcontrol_visualizer"
            app:layout_constraintLeft_toRightOf="@id/control_queue"
            app:layout_constraintRight_toLeftOf="@id/control_play"
            app:layout_constraintTop_toBottomOf="@id/control_title" />

        <View
            android:id="@+id/control_queue"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="12dp"
            android:focusable="false"
            android:backgroundTint="@color/colorOnBackground"
            android:background="@drawable/ic_baseline_queue_music_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/playbackcontrol_visualizer"
            app:layout_constraintBottom_toBottomOf="@id/playbackcontrol_visualizer" />

        <TextView
            android:id="@+id/playbackcontrol_queue_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_badge"
            android:backgroundTint="@color/colorTertiaryContainer"
            android:textColor="@color/colorOnTertiaryContainer"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingEnd="4dp"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/control_queue"
            app:layout_constraintBottom_toBottomOf="@id/control_queue"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>